{
    "name": "Zephyr Dev Container",
    "image": "dbwalker/zephyr-dev:latest",
    "workspaceFolder": "/workdir",
    "remoteUser": "devuser",
	"mounts": [
		"source=${workspaceDirectory},target=/workdir,type=bind"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "ms-vscode.cpptools-extension-pack"
            ]
        }
    }
}
